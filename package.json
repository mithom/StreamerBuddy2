{
  "name": "vite-electron-builder",
  "version": "0.0.1",
  "private": true,
  "main": "dist/source/main/background.js",
  "scripts": {
    "build": "yarn build:main && yarn build:renderer && yarn build:preload",
    "build:main": "vite build --config ./config/main.vite.js",
    "build:preload": "vite build --config ./config/preload.vite.js",
    "build:renderer": "vite build --config ./config/renderer.vite.js",
    "watch": "yarn watch:build:main && yarn watch:build:renderer && yarn watch:build:preload",
    "watch:build:main": "nodemon --exec \"yarn build:main -- --mode development\" --watch src/main -e ts",
    "watch:build:preload": "nodemon --exec \"yarn build:preload -- --mode development\" --watch src/preload -e ts",
    "watch:build:renderer": "vite serve --config ./config/renderer.vite.js",
    "watch:electron": "nodemon --exec \"electron .\" --watch dist/source/main --watch dist/source/preload",
    "electron": "electron .",
    "electron-builder": "electron-builder build --config ./config/electron-builder.js"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-window-state": "^2.0.34",
    "@vuedx/typecheck": "^0.3.1-insiders-1607121235.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "typescript": "^4.1.2",
    "vite": "^1.0.0-rc.13",
    "autoprefixer": "9",
    "postcss": "7",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  },
  "dependencies": {
    "electron-log": "^4.3.0",
    "electron-updater": "^4.3.5",
    "electron-window-state": "^5.0.3"
  },
  "optionalDependencies": {
    "nodemon": "^2.0.6"
  }
}
